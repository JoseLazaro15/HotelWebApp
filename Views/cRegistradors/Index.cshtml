@model IEnumerable<PracticaV1.Models.cRegistrador>

@{
    ViewData["Title"] = "Registradores";
}

<h1>Registradores</h1>

<p>
    <a asp-action="Create">Registrar Nuevo Registrador</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.idRegistrador)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.direccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.documento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.observacion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.idRegistrador)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.direccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.documento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.telefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.observacion)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.idRegistrador">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.idRegistrador">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.idRegistrador">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
