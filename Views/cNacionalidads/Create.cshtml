@model PracticaV1.Models.cNacionalidad

@{
    ViewData["Title"] = "Registro de Nacionalidades";
}

<h1>Registro de Nueva Nacionalidad</h1>

<h4>Nacionalidades</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="idNacionalidad" class="control-label">Id de la nacionalidad</label>
                <input asp-for="idNacionalidad" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="pais" class="control-label">Pais</label>
                <input asp-for="pais" class="form-control" />
                <span asp-validation-for="pais" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="nacionalidad" class="control-label">Nacionalidad</label>
                <input asp-for="nacionalidad" class="form-control" />
                <span asp-validation-for="nacionalidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
